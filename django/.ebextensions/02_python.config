option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "notejam.settings"
    "PYTHONPATH": "/opt/python/current/app/notejam:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    NumProcesses: '4'
    NumThreads: '21'
    WSGIPath: notejam/notejam/wsgi.py
  aws:elasticbeanstalk:container:python:staticfiles:
    "/static/": "www/static/"
container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && source /opt/python/current/env && python /opt/python/current/app/notejam/manage.py syncdb --noinput"
    command: "source /opt/python/run/venv/bin/activate && source /opt/python/current/env && python /opt/python/current/app/notejam/manage.py migrate --noinput"
    leader_only: true
